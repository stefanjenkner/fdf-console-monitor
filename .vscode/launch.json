{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/src/App.ts",
            "args": ["--port", "/dev/tty.usbserial-A6029KI0", "--name", "FDF Rower Test"],
            "outFiles": [
                "${workspaceFolder}/build/**/*.js"
            ],
            "console": "integratedTerminal",
            "preLaunchTask":  "tsc: build - tsconfig.json"
        }
    ]
}